{
  "manifest_version": 3,
  "name": "Discord Search Blocker",
  "version": "1.0",
  "permissions": [
    "activeTab",
    "declarativeContent"
  ],
  "host_permissions": [
    "https://discord.com/channels/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://discord.com/channels/*"],
      "js": ["content.js"]
    }
  ],
  "description": "Blocks search bar on Discord channels.",
  "action": {
    "default_popup": "",
    "default_icon": {
      "16": "icon-16.png",
      "64": "icon-64.png",
      "128": "icon-128.png"
    }
  }
}
