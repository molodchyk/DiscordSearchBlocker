{
  "manifest_version": 3,
  "name": "Discord Search Blocker",
  "version": "1.0",
  "description": "Hides the Discord search bar",
  "permissions": [
    "activeTab"
  ],
  "action": {
    "default_popup": "",
    "default_icon": {
      "16": "icon-16.png",
      "48": "icon-64.png",
      "128": "icon-128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["*://discord.com/*"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "16": "icon-16.png",
    "48": "icon-64.png",
    "128": "icon-128.png"
  }
}
